{% extends 'base.html.twig' %}

{% block title %}Password Reset Email Sent{% endblock %}

{% block body %}

<div class="container">
    <div class="row col-12 d-flex justify-content-center mt-5">
        <div class="card text-dark border-success mb-3" style="max-width: 40rem;">
            <div class="card-header">An Email has been sent</div>
            <div class="card-body">
                <p>
                    It contains a link that you can click to reset your password.
                    This link will expire in {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.
                </p>
                <p>If you don't receive an email please check your spam folder or <a href="{{ path('app_forgot_password_request') }}">try again</a>.</p>
            </div>
        </div>
    </div>
</div>

{% endblock %}
